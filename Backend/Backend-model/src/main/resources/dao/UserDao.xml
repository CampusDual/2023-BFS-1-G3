<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="TUSER"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>USER_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>USER_</Column>
    </UpdateKeys>
    <Queries>
        <Query id="default">
            <ValidColumns>
                <Column>USER_</Column>
                <Column>PASSWORD</Column>
                <Column>NAME</Column>
                <Column>SURNAME1</Column>
                <Column>SURNAME2</Column>
                <Column>EMAIL</Column>
                <Column>NIF</Column>
                <Column>USERBLOCKED</Column>
                <Column>LASTPASSWORDUPDATE</Column>
                <Column>FIRSTLOGIN</Column>
                <Column>ID_ROLENAME</Column>
                <Column>ROLENAME</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
<!--                        ${mainschema}.TUSER-->
                        ${mainschema}.TUSER tu
                        LEFT JOIN ${mainschema}.TUSER_ROLE tur ON tu.USER_ = tur.USER_
                        LEFT JOIN ${mainschema}.TROLE tr ON tur.ID_ROLENAME = tr.ID_ROLENAME
                    #WHERE#
                ]]>
            </Sentence>
        </Query>    
        <Query id="login">
            <ValidColumns>
                <Column>USER_</Column>
                <Column>PASSWORD</Column>
                <Column>NAME</Column>
                <Column>SURNAME1</Column>
                <Column>SURNAME2</Column>
                <Column>EMAIL</Column>
                <Column>NIF</Column>
                <Column>USERBLOCKED</Column>
                <Column>LASTPASSWORDUPDATE</Column>
                <Column>FIRSTLOGIN</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.TUSER
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>